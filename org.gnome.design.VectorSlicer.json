{
  "app-id" : "org.gnome.design.VectorSlicer",
  "runtime" : "org.gnome.Platform",
  "runtime-version" : "43",
  "sdk" : "org.gnome.Sdk",
  "sdk-extensions" : [
    "org.freedesktop.Sdk.Extension.rust-stable"
  ],
  "command" : "vector-slicer",
  "finish-args" : [
    "--share=ipc",
    "--socket=fallback-x11",
    "--socket=wayland",
    "--device=dri"
  ],
  "build-options" : {
    "append-path" : "/usr/lib/sdk/rust-stable/bin",
    "env" : {
      "CARGO_HOME" : "/run/build/vector-slicer/cargo",
      "RUST_BACKTRACE" : "1",
      "CARGO_NET_OFFLINE" : "true",
      "RUST_LOG" : "vector-slicer=debug"
    }
  },
  "modules" : [
    {
      "name" : "vector-slicer",
      "buildsystem" : "meson",
      "sources" : [
        {
          "type" : "git",
          "tag" : "v0.0.2",
          "url" : "https://gitlab.gnome.org/World/design/vector-slicer.git"
        },
        "cargo-sources.json",
        {
          "type": "patch",
          "path": "cargo-source.patch"
        }
      ]
    }
  ]
}
